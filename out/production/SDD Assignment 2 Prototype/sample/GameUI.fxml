<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="576.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GameUIController">
   <children>
      <Button fx:id="submitButton" disable="true" layoutX="458.0" layoutY="468.0" mnemonicParsing="false" onAction="#submitAnswer" text="Submit">
         <font>
            <Font size="24.0" />
         </font></Button>
      <TextField fx:id="enterText" disable="true" layoutX="212.0" layoutY="246.0" prefHeight="190.0" prefWidth="600.0" />
      <Label fx:id="sentenceLabel" disable="true" layoutX="212.0" layoutY="55.0" prefHeight="190.0" prefWidth="600.0" text="Sentence" />
      <Label fx:id="scoreLabel" disable="true" layoutX="212.0" layoutY="38.0" text="Points" />
      <Label fx:id="remainingTimeLabel" disable="true" layoutX="812.0" layoutY="246.0" text="RemainingTime" />
      <Button fx:id="backButton" disable="true" layoutX="142.0" layoutY="55.0" mnemonicParsing="false" onAction="#leaveGame" text="Exit">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Button fx:id="startButton" defaultButton="true" layoutX="448.0" layoutY="280.0" mnemonicParsing="false" onAction="#startGame" prefHeight="80.0" prefWidth="128.0" text="Start" />
      <Label fx:id="gameOverLabel" layoutX="212.0" layoutY="230.0" text="Game over" textFill="RED" visible="false" />
   </children>
</AnchorPane>
